@model IEnumerable<OrderViewModel>

<div class="orders-page">
    <h2 class="page-title">Orders</h2>

    <table class="orders-table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Status</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate</td>
                    <td>@order.Status</td>
                    <td>$@order.TotalAmount</td>
                </tr>
            }
        </tbody>
    </table>
</div>