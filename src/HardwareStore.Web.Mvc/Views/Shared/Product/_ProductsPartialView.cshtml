@model IEnumerable<ProductViewModel>

<div class="products-container">
    
    @if (Model.Any())
        {
        <div class="products-row">
            @foreach (var product in Model)
            {
                <div class="product-card">
                    <div class="product-details">
                        <h3 class="product-title">@product.Name</h3>
                        <p class="product-price">$@product.Price</p>
                        <a asp-action="AddToShoppingCart" asp-controller="Cart" asp-route-productId="@product.Id" asp-route-quantity="1" class="product-button">Buy</a>
                    </div>
                    <a class="hiddenLink" asp-action="Details" asp-controller="Product" asp-route-productId="@product.Id" hidden></a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="center-content">
            <p class="paragraph-style">There are no products.</p>
        </div>
    }
</div>