@model ICollection<FavoriteExportModel>

<div class="products-container">
    @if (Model.Any())
    {
        <div class="products-row">
            @foreach (var favorite in Model)
            {
                <div class="product-card">
                    <div class="product-details">
                        <h3 class="product-title">@favorite.Name</h3>
                        <p class="product-price">$@favorite.Price</p>
                        <div class="product-buttons">
                            <a asp-action="AddToShoppingCart" asp-controller="Cart" asp-route-productId="@favorite.Id" asp-route-quantity="1" class="product-button">Buy</a>
                            <span>Remove from favorite <a data-product-id="@favorite.Id" class="remove-favorite">x</a></span>
                        </div>
                        <a class="hiddenLink" asp-action="Details" asp-controller="Product" asp-route-productId="@favorite.Id" hidden></a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="center-content">
            <p class="paragraph-style">There are no products.</p>
        </div>
    }
</div>

<script src="~/js/card.js"></script>