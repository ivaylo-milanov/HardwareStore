@model OrderFormModel

<div class="order-page">
    <div class="order-form">
        <form id="order-form" asp-action="Index" asp-controller="Order" method="post">
            <div class="form-container">
                <h2 class="form-title">Product Order Form</h2>
                <h3 class="section-title">Personal Data</h3>
                <div class="form-group">
                    <div class="form-item">
                        <label for="">First Name <span class="required">*</span></label>
                        <input type="text" name="FirstName" class="form-input" required value="@Model.FirstName">
                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label for="">Last Name <span class="required">*</span></label>
                        <input type="text" name="LastName" class="form-input" required value="@Model.LastName">
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label for="">Phone Number <span class="required">*</span></label>
                        <input type="text" name="Phone" class="form-input" required value="@Model.Phone">
                        <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label for="">Area <span class="required">*</span></label>
                        <input type="text" name="Area" class="form-input" required value="@Model.Area">
                        <span asp-validation-for="@Model.Area" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label for="">City <span class="required">*</span></label>
                        <input type="text" name="City" class="form-input" required value="@Model.City">
                        <span asp-validation-for="@Model.City" class="text-danger"></span>
                    </div>
                    <div class="form-item">
                        <label for="">Address <span class="required">*</span></label>
                        <input type="text" name="Address" class="form-input" required value="@Model.Address">
                        <span asp-validation-for="@Model.Address" class="text-danger"></span>
                    </div>
                </div>
                <h3 class="section-title">Additional Notes</h3>
                <div class="form-group">
                    <textarea name="notes" class="form-input"></textarea>
                </div>
                <h3 class="section-title">Payment Method</h3>
                <div class="form-group payment-method">
                    <label class="radio-label">
                        <input type="radio" name="PaymentMethod" value="1" class="radio-input" checked>
                        <span class="checkmark"></span> Credit Card
                    </label>
                    <label class="radio-label">
                        <input type="radio" name="PaymentMethod" value="2" class="radio-input">
                        <span class="checkmark"></span> Cash
                    </label>
                </div>
            </div>
        </form>
    </div>
    <div class="shopping-cart">
        <h3 class="section-title">Shopping Cart</h3>
        <div class="order-summary">
            <p class="total-amount">Total: $<span class="total-price">@Model.TotalAmount</span></p>
            <p class="delivery-amount">Delivery: Free</p>
            <button type="submit" form="order-form" class="btn-submit">Place Order</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/order.js"></script>
}
